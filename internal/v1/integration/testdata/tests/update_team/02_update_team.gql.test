mutation {
  updateTeam(
    input: {slug: "{{ .teamSlug }}", purpose: "new-purpose", slackChannel: "#new-slack-channel"}
  ) {
    team {
      purpose
      slackChannel
      environments {
        name
        slackAlertsChannel
      }
    }
  }
}


RETURNS

{
  "data": {
    "updateTeam": {
      "team": {
        "purpose": "new-purpose",
        "slackChannel": "#new-slack-channel",
        "environments": [
          {
            "name": "dev",
            "slackAlertsChannel": "#new-slack-channel"
          },
          {
            "name": "staging",
            "slackAlertsChannel": "#new-slack-channel"
          }
        ]
      }
    }
  }
}
