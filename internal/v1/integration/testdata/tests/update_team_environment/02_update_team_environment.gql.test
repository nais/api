mutation {
	updateTeamEnvironment(
		input: {slug: "{{ .teamSlug }}", environmentName: "dev", slackAlertsChannel:"#dev"}
	) {
		environment {
			name
			team {
				slug
				environments {
					name
					slackAlertsChannel
				}
			}
		}
	}
}

RETURNS

{
	"data": {
		"updateTeamEnvironment": {
			"environment": {
				"name": "dev",
				"team": {
					"slug": "{{ .teamSlug }}",
					"environments": [{
						"name": "dev",
						"slackAlertsChannel": "#dev"
					}, {
						"name": "staging",
						"slackAlertsChannel": "#default"
					}]
				}
			}
		}
	}
}
