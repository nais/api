# Add user to team, but opt out of one reconciler
mutation {
  addTeamMember(slug: "{{ .teamSlug }}",  member: {userId: "{{ .userID }}", role: MEMBER, reconcilerOptOuts:[ "rec1" ]}) {
    members {
      nodes {
        user {
          email
        }
        reconcilers {
          reconciler {
            name
          }
          enabled
        }
        role
      }
    }
  }
}

